@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Novo Contato";
}

<h1>Criar novo contato</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label">Telefone:</label>
                <input asp-for="Numero" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label">Ativo:</label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br />
            <div>
                <input type="submit" value="Criar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Voltar</a>
</div>